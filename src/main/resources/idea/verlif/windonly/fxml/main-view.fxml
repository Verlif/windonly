<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="520.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="idea.verlif.windonly.WindonlyController">
    <bottom>
        <BorderPane>
            <left>
                <ChoiceBox fx:id="archiveBox"/>
            </left>
            <center>
                <TextField fx:id="input" onMousePressed="#inputClicked"
                           BorderPane.alignment="CENTER">
                </TextField>
            </center>
            <right>
                <BorderPane>
                    <center>
                        <ImageView fx:id="pinView" style="-fx-background-color: red"/>
                    </center>
                    <padding>
                        <Insets left="6.0"/>
                    </padding>
                </BorderPane>
            </right>
            <BorderPane.margin>
                <Insets top="4.0"/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="400.0" prefWidth="400.0"
                    BorderPane.alignment="CENTER">
            <ListView fx:id="list" prefHeight="145.0" prefWidth="179.0"/>
        </ScrollPane>
    </center>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
</BorderPane>
